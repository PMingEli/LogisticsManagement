<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ming.logisticsmanagement">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.FullScreen"
        android:networkSecurityConfig="@xml/network_security_config">
        <activity android:name=".ui.activity.MainActivity"
            android:launchMode="singleTask"></activity>
        <activity android:name=".ui.activity.SecondActivity"></activity>

        <activity android:name=".ui.activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ui.activity.LoginActivity"></activity>
        <activity android:name=".ui.activity.RegistActivity"></activity>
        <activity android:name=".ui.activity.EnterwaybillActivity"></activity>
        <activity android:name=".ui.activity.LocalwaybillActivity"></activity>

    </application>

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"></uses-permission>
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>

</manifest>