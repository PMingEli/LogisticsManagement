<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_blue"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">
        <TextView
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="到站："
            android:textColor="@color/white"
            android:textSize="25sp"
            android:layout_marginLeft="20dp"
            android:gravity="right"
            ></TextView>
        <EditText
            android:id="@+id/transportationArrivalStation"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:textSize="25sp"
            ></EditText>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发站："
            android:textColor="@color/white"
            android:textSize="25sp"
            android:layout_marginLeft="10dp"
            ></TextView>
        <TextView
            android:id="@+id/transportationDepartureStation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/white"
            android:textSize="25sp"
            android:layout_marginRight="20dp"
            ></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="发货人："
            android:textColor="@color/white"
            android:textSize="25sp"
            android:layout_marginLeft="20dp"
            android:gravity="right"
            ></TextView>
        <EditText
            android:id="@+id/consignor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:textSize="25sp"
            android:layout_marginRight="20dp"
            ></EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="发货电话："
            android:textColor="@color/white"
            android:textSize="25sp"
            android:layout_marginLeft="20dp"
            android:gravity="right"
            ></TextView>
        <EditText
            android:id="@+id/consignorPhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:textSize="25sp"
            android:layout_marginRight="20dp"
            ></EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="收货人："
            android:textColor="@color/white"
            android:textSize="25sp"
            android:layout_marginLeft="20dp"
            android:gravity="right"
            ></TextView>
        <EditText
            android:id="@+id/consignee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:textSize="25sp"
            android:layout_marginRight="20dp"
            ></EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="收货电话："
            android:textColor="@color/white"
            android:textSize="25sp"
            android:layout_marginLeft="20dp"
            android:gravity="right"
            ></TextView>
        <EditText
            android:id="@+id/consigneePhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:textSize="25sp"
            android:layout_marginRight="20dp"
            ></EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="货物名称："
            android:textColor="@color/white"
            android:textSize="25sp"
            android:layout_marginLeft="20dp"
            android:gravity="right"
            ></TextView>
        <EditText
            android:id="@+id/goodsName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:textSize="25sp"
            android:layout_marginRight="20dp"
            ></EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="件数："
            android:textColor="@color/white"
            android:textSize="25sp"
            android:layout_marginLeft="20dp"
            android:gravity="right"
            ></TextView>
        <EditText
            android:id="@+id/numberOfPackages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:textSize="25sp"
            android:layout_marginRight="20dp"
            ></EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="已付运费："
            android:textColor="@color/white"
            android:textSize="25sp"
            android:layout_marginLeft="20dp"
            android:gravity="right"
            ></TextView>
        <EditText
            android:id="@+id/FreightPaidByConsignor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:textSize="25sp"
            android:layout_marginRight="20dp"
            ></EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="到付运费："
            android:textColor="@color/white"
            android:textSize="25sp"
            android:layout_marginLeft="20dp"
            android:gravity="right"
            ></TextView>
        <EditText
            android:id="@+id/FreightPaidByConsignee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:textSize="25sp"
            android:layout_marginRight="20dp"
            ></EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center">
        <Button
            android:id="@+id/back"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@color/bg_blue"
            android:text="返回"
            android:textColor="@color/white"
            android:textSize="24sp"
            ></Button>
        <Button
            android:id="@+id/save"
            android:layout_marginLeft="50dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@color/bg_blue"
            android:text="保存"
            android:textColor="@color/white"
            android:textSize="24sp"
            ></Button>
    </LinearLayout>



</LinearLayout>