<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/bg_blue"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="100dp"
        android:gravity="center_horizontal"
        android:text="物流管理系统V1.0"
        android:textColor="@color/white"
        android:textSize="36sp" />
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_account"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/account"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center_vertical"
            ></ImageView>

        <TextView
            android:id="@+id/userName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:background="@color/white"
            android:layout_marginLeft="10dp"
            android:textSize="24sp"
            ></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_password"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/password"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center_vertical"
            ></ImageView>

        <TextView
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:background="@color/white"
            android:textSize="24sp"
            ></TextView>
    </LinearLayout>

    <Button
        android:id="@+id/enter_waybill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:backgroundTint="@color/bg_blue"
        android:text="录入运单"
        android:textSize="24sp"
        android:layout_marginTop="50dp"
        ></Button>
    <Button
        android:id="@+id/query_local_waybill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:backgroundTint="@color/bg_blue"
        android:text="查询本地运单"
        android:textSize="24sp"
        android:layout_marginTop="10dp"
        ></Button>
    <Button
        android:id="@+id/query_xml_waybill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:backgroundTint="@color/bg_blue"
        android:text="查询公司运单XML"
        android:textSize="24sp"
        android:layout_marginTop="10dp"
        ></Button>
    <Button
        android:id="@+id/query_json_waybill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:backgroundTint="@color/bg_blue"
        android:text="查询公司运单JSON"
        android:textSize="24sp"
        android:layout_marginTop="10dp"
        ></Button>
    <Button
        android:id="@+id/switch_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:backgroundTint="@color/bg_blue"
        android:text="切换用户"
        android:textSize="24sp"
        android:layout_marginTop="10dp"
        ></Button>
    <Button
        android:id="@+id/quit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:backgroundTint="@color/bg_blue"
        android:text="退出"
        android:textSize="24sp"
        android:layout_marginTop="10dp"
        ></Button>


</LinearLayout>